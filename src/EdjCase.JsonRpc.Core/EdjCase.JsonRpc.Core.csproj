<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Description>The core library used by JsonRpc client/router.</Description>
		<Version>2.0.0</Version>
		<Authors>Gekctek</Authors>
		<TargetFrameworks>netstandard2.0;netstandard1.1</TargetFrameworks>
		<AssemblyName>EdjCase.JsonRpc.Core</AssemblyName>
		<PackageId>EdjCase.JsonRpc.Core</PackageId>
		<PackageTags>JsonRpc Rpc Json-Rpc .Net Core</PackageTags>
		<PackageReleaseNotes>Upgrading to work with NetStandard 2</PackageReleaseNotes>
		<PackageProjectUrl>https://github.com/edjCase/JsonRpc</PackageProjectUrl>
		<PackageLicenseUrl>https://raw.githubusercontent.com/edjCase/JsonRpc/master/LICENSE</PackageLicenseUrl>
		<RepositoryType>git</RepositoryType>
		<NetStandardImplicitPackageVersion Condition=" '$(TargetFramework)' == 'netstandard1.1' ">1.6.0</NetStandardImplicitPackageVersion>
		<RepositoryUrl>https://github.com/edjCase/JsonRpc</RepositoryUrl>
		<LangVersion>latest</LangVersion>
	</PropertyGroup>
	
	<ItemGroup>
		<PackageReference Include="Newtonsoft.Json" Version="10.0.1" />
	</ItemGroup>
</Project>
